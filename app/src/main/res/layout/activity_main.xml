<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <TextView
        android:fontFamily="@font/bungee_shade"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="galaxy store"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        />


    <EditText
        android:id="@+id/name"
        android:layout_marginStart="10dp"
        android:hint="silahkan tuliskan nama anda disini..."
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginStart="10sp"
        android:text="Tipe Pelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"/>

    <RadioGroup
        android:id="@+id/tipe_pelanggan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:layout_marginStart="10sp"
            android:text="Gold"
            android:id="@+id/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"/>

        <RadioButton
            android:id="@+id/silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80sp"
            android:layout_marginTop="-48dp"
            android:text="Silver" />

        <RadioButton
            android:layout_marginStart="150sp"
            android:text="Biasa"
            android:id="@+id/biasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-48dp"/>

    </RadioGroup>


    <EditText
        android:id="@+id/kode_barang"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="230dp"
        android:hint="KODE BARANG"/>

    <EditText
        android:id="@+id/jumlah_barang"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:hint="JUMLAH BARANG"/>

    <Button
        android:id="@+id/proses"
        android:padding="10dp"
        android:gravity="center"
        android:text="PROSES"
        android:textStyle="bold"
        android:layout_marginTop="430dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        />


</RelativeLayout>